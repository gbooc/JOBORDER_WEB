
@{
    ViewBag.Title = "Canteen";
    Layout = "~/Views/Shared/Homepage_LayoutPage.cshtml";
}

<script src="~/Content/custom/Canteen.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/css/style.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/css/colors.min.css">
<div class="card-body p-0 pb-3 text-center" id="tblverlay">
    <img src="~/Content/gif/loader7.gif" id="imgLoader" />
</div>

<div class="cards">
    <div id="dvBody">
        <div class="card">
            <div class="card-body">
                <h3 class="modal-title"><i class="fa fa-birthday-cake"></i> Canteen</h3>
                <br />
                <div class="row">
                    <div class="col-6">
                        <div class="row" style="margin-top:10px;">
                            <div class="col-10">
                                <div class="input-group">
                                    <input type="text" id="txt-idnum" class="form-control" placeholder="Id Number">
                                    <input type="text" id="txt-datestart" class="form-control" placeholder="Start Date">
                                    <input type="text" id="txt-dateend" class="form-control" placeholder="End Date">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-dark" onclick="getCanteen()">
                                            <i class="fa fa-search"></i> Inquire
                                        </button>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="table-responsive">
                        <div class="col-11" style="margin-left: 50px;">
                            <table class="table table-striped table-hover" id="tbl-transaction">
                                <thead>
                                    <tr id="tblTr">
                                        <th>ID</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody id="tb-transaction" style="text-align:center;">
                                    <tr>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-10">

                    </div>
                    <div class="col-1">
                        <h4 style="text-align:right; font-weight:700;">Total: </h4>
                    </div>
                    <div class="col-1">
                        <h4 id="lbl-total" style="font-weight:700;"></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>