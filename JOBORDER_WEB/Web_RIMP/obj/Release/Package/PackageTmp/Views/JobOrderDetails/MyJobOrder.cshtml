                                                    <tr id="tblTr">
                                                        <th>Category</th>
                                                        <th>Type</th>
                                                        <th>Total</th>
                                                        <th>Pending</th>
                                                        <th>...</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="tb-myjo-summary">
                                                    @foreach (var HW in ViewBag.HWSummary)
